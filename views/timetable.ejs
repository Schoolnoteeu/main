      const printButton = document.querySelector('button[type="button"] i[data-feather="printer"]').parentElement;
      if (printButton) {
        printButton.addEventListener('click', function() {
          window.print();
        });
      }
      
      // Filter-Buttons
      const allSubjectsBtn = document.querySelector('button.bg-amber-100');
      const mainSubjectsBtn = document.querySelector('button.bg-gray-100');
      const minorSubjectsBtn = document.querySelectorAll('button.bg-gray-100')[1];
      
      if (allSubjectsBtn && mainSubjectsBtn && minorSubjectsBtn) {
        const resetButtons = () => {
          allSubjectsBtn.classList.remove('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-800', 'dark:text-amber-400');
          allSubjectsBtn.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
          
          mainSubjectsBtn.classList.remove('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-800', 'dark:text-amber-400');
          mainSubjectsBtn.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
          
          minorSubjectsBtn.classList.remove('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-800', 'dark:text-amber-400');
          minorSubjectsBtn.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
          
          allSubjectsBtn.setAttribute('aria-pressed', 'false');
          mainSubjectsBtn.setAttribute('aria-pressed', 'false');
          minorSubjectsBtn.setAttribute('aria-pressed', 'false');
        };
        
        allSubjectsBtn.addEventListener('click', function() {
          resetButtons();
          this.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
          this.classList.add('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-800', 'dark:text-amber-400');
          this.setAttribute('aria-pressed', 'true');
          
          // Alle Fächer anzeigen
          document.querySelectorAll('td > div').forEach(subject => {
            const td = subject.closest('td');
            if (td) td.style.display = '';
          });
          
          showToast('Zeige alle Fächer an.');
        });
        
        mainSubjectsBtn.addEventListener('click', function() {
          resetButtons();
          this.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
          this.classList.add('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-800', 'dark:text-amber-400');
          this.setAttribute('aria-pressed', 'true');
          
          // Nur Hauptfächer anzeigen (D, M, E, etc.)
          const mainSubjects = ['D', 'M', 'E', 'Bio', 'Ch', 'Ph'];
          filterSubjects(mainSubjects);
          
          showToast('Zeige nur Hauptfächer an.');
        });
        
        minorSubjectsBtn.addEventListener('click', function() {
          resetButtons();
          this.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
          this.classList.add('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-800', 'dark:text-amber-400');
          this.setAttribute('aria-pressed', 'true');
          
          // Nur Nebenfächer anzeigen (Ku, Mu, Sp, etc.)
          const minorSubjects = ['Ku', 'Mu', 'Sp', 'Ge', 'Re'];
          filterSubjects(minorSubjects);
          
          showToast('Zeige nur Nebenfächer an.');
        });
        
        function filterSubjects(targetSubjects) {
          document.querySelectorAll('td > div').forEach(subject => {
            const subjectTag = subject.querySelector('span.rounded:not(.rounded-full)');
            const isTargetSubject = subjectTag && targetSubjects.some(code => subjectTag.textContent.trim() === code);
            
            const td = subject.closest('td');
            if (td) td.style.display = isTargetSubject ? '' : 'none';
          });
        }
      }
      
      // Ansichtsumschalter (Wochen-/Tagesansicht)
      const viewWeekBtn = document.getElementById('view-week');
      const viewDayBtn = document.getElementById('view-day');
      
      if (viewWeekBtn && viewDayBtn) {
        viewWeekBtn.addEventListener('click', function() {
          this.classList.add('bg-white', 'dark:bg-gray-800', 'shadow-sm');
          this.classList.remove('hover:bg-gray-100', 'dark:hover:bg-gray-600');
          
          viewDayBtn.classList.remove('bg-white', 'dark:bg-gray-800', 'shadow-sm');
          viewDayBtn.classList.add('hover:bg-gray-100', 'dark:hover:bg-gray-600');
          
          showToast('Wochenansicht aktiviert');
        });
        
        viewDayBtn.addEventListener('click', function() {
          this.classList.add('bg-white', 'dark:bg-gray-800', 'shadow-sm');
          this.classList.remove('hover:bg-gray-100', 'dark:hover:bg-gray-600');
          
          viewWeekBtn.classList.remove('bg-white', 'dark:bg-gray-800', 'shadow-sm');
          viewWeekBtn.classList.add('hover:bg-gray-100', 'dark:hover:bg-gray-600');
          
          showToast('Tagesansicht aktiviert');
        });
      }
      
      // Wochennavigation Buttons
      const prevWeekBtn = document.querySelector('.bg-gray-100.text-gray-700 i[data-feather="arrow-left"]').closest('button');
      const nextWeekBtn = document.querySelector('.bg-gray-100.text-gray-700 i[data-feather="arrow-right"]').closest('button');
      
      if (prevWeekBtn && nextWeekBtn) {
        const weeks = [
          {range: '08.04 - 12.04', dates: ['08.04', '09.04', '10.04', '11.04', '12.04']},
          {range: '15.04 - 19.04', dates: ['15.04', '16.04', '17.04', '18.04', '19.04']},
          {range: '22.04 - 26.04', dates: ['22.04', '23.04', '24.04', '25.04', '26.04']}
        ];
        let currentWeekIndex = 0;
        
        prevWeekBtn.addEventListener('click', function() {
          currentWeekIndex = (currentWeekIndex - 1 + weeks.length) % weeks.length;
          updateWeekDisplay(currentWeekIndex);
          
          // Synchronisiere mit dem Dropdown
          if (weekSelect) {
            const options = ['current', 'next', 'after'];
            weekSelect.value = options[currentWeekIndex];
          }
          
          showToast(`Stundenplan für die Woche vom ${weeks[currentWeekIndex].dates[0]} bis ${weeks[currentWeekIndex].dates[4]} geladen.`);
        });
        
        nextWeekBtn.addEventListener('click', function() {
          currentWeekIndex = (currentWeekIndex + 1) % weeks.length;
          updateWeekDisplay(currentWeekIndex);
          
          // Synchronisiere mit dem Dropdown
          if (weekSelect) {
            const options = ['current', 'next', 'after'];
            weekSelect.value = options[currentWeekIndex];
          }
          
          showToast(`Stundenplan für die Woche vom ${weeks[currentWeekIndex].dates[0]} bis ${weeks[currentWeekIndex].dates[4]} geladen.`);
        });
        
        function updateWeekDisplay(index) {
          const dateRange = document.querySelector('.bg-amber-100.text-amber-800.rounded-md');
          if (dateRange) {
            dateRange.textContent = weeks[index].range;
          }
          
          // Aktualisiere auch die Tabellen-Header
          const headers = document.querySelectorAll('thead th:not(:first-child) span.font-normal');
          headers.forEach((header, i) => {
            if (weeks[index].dates[i]) {
              header.textContent = weeks[index].dates[i];
            }
          });
          
          // Aktualisiere den mobilen Header falls vorhanden
          const mobileHeader = document.querySelector('.px-4.py-3.border-b h2 span:last-child');
          if (mobileHeader && weeks[index].dates[0]) {
            mobileHeader.textContent = weeks[index].dates[0];
          }
        }
      }
      
      // Mobile Tagesnavigation
      const prevDayBtn = document.querySelector('button i[data-feather="chevron-left"]')?.parentElement;
      const nextDayBtn = document.querySelector('button i[data-feather="chevron-right"]')?.parentElement;
      const currentDayHeader = document.querySelector('.px-4.py-3.border-b h2');
      
      if (prevDayBtn && nextDayBtn && currentDayHeader) {
        const days = [
          {name: 'Montag', date: '08.04'},
          {name: 'Dienstag', date: '09.04'},
          {name: 'Mittwoch', date: '10.04'},
          {name: 'Donnerstag', date: '11.04'},
          {name: 'Freitag', date: '12.04'}
        ];
        let currentDayIndex = 0;
        
        prevDayBtn.addEventListener('click', function() {
          currentDayIndex = (currentDayIndex - 1 + days.length) % days.length;
          updateDayDisplay(currentDayIndex);
          
          showToast(`Tag gewechselt zu ${days[currentDayIndex].name}`);
        });
        
        nextDayBtn.addEventListener('click', function() {
          currentDayIndex = (currentDayIndex + 1) % days.length;
          updateDayDisplay(currentDayIndex);
          
          showToast(`Tag gewechselt zu ${days[currentDayIndex].name}`);
        });
        
        function updateDayDisplay(index) {
          if (currentDayHeader) {
            currentDayHeader.innerHTML = `
              <span>${days[index].name}</span>
              <span class="ml-1 text-amber-500 dark:text-amber-400">${days[index].date}</span>
            `;
          }
        }
      }
      
      // Benachrichtigungssystem
      function showToast(message) {
        // Überprüfen, ob bereits eine Benachrichtigung existiert
        let notification = document.getElementById('notification');
        
        if (!notification) {
          // Neue Benachrichtigung erstellen
          notification = document.createElement('div');
          notification.id = 'notification';
          notification.className = 'fixed bottom-4 right-4 bg-amber-600 text-white px-4 py-2 rounded-lg shadow-lg opacity-0 transform translate-y-2 transition-all duration-300 z-50';
          document.body.appendChild(notification);
        }
        
        // Nachricht setzen und anzeigen
        notification.textContent = message;
        notification.classList.remove('opacity-0', 'translate-y-2');
        notification.classList.add('opacity-100', 'translate-y-0');
        
        // Nach 3 Sekunden ausblenden
        setTimeout(() => {
          notification.classList.remove('opacity-100', 'translate-y-0');
          notification.classList.add('opacity-0', 'translate-y-2');
        }, 3000);
      }
    });
  </script>
