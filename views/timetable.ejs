                  <option value="next">Nächste Woche (15.04 - 19.04)</option>
                  <option value="after">Übernächste Woche (22.04 - 26.04)</option>
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700 dark:text-gray-300">
                  <i data-feather="chevron-down" class="h-4 w-4"></i>
                </div>
              </div>
              
              <button type="button" class="flex items-center px-4 py-2 bg-gradient-to-r from-amber-500 to-amber-600 text-white rounded-lg shadow-sm hover:from-amber-600 hover:to-amber-700 transition-all duration-300" aria-label="Stundenplan drucken">
                <i data-feather="printer" class="h-4 w-4 mr-2"></i>
                Drucken
              </button>
            </div>
          </div>
        </div>

        <!-- Filter -->
        <div class="mb-6 bg-white dark:bg-gray-800 shadow rounded-lg p-4">
          <div class="flex flex-wrap gap-3 items-center justify-between">
            <div class="flex flex-wrap gap-2">
              <button class="px-3 py-1.5 bg-amber-100 dark:bg-amber-900/30 text-amber-800 dark:text-amber-400 rounded-md text-xs font-medium hover:bg-amber-200 dark:hover:bg-amber-800/40 transition-colors shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500" aria-pressed="true">
                Alle Fächer
              </button>
              <button class="px-3 py-1.5 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-md text-xs font-medium hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500" aria-pressed="false">
                Hauptfächer
              </button>
              <button class="px-3 py-1.5 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-md text-xs font-medium hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500" aria-pressed="false">
                Nebenfächer
              </button>
            </div>
            
            <div class="flex items-center">
              <span class="text-xs font-medium text-gray-500 dark:text-gray-400 mr-2">Ansicht:</span>
              <div class="flex items-center space-x-1 bg-gray-200 dark:bg-gray-700 p-1 rounded-md">
                <button id="view-week" class="p-1.5 rounded bg-white dark:bg-gray-800 shadow-sm text-gray-700 dark:text-gray-300">
                  <i data-feather="grid" class="h-4 w-4"></i>
                  <span class="sr-only">Wochenansicht</span>
                </button>
                <button id="view-day" class="p-1.5 rounded text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-600">
                  <i data-feather="list" class="h-4 w-4"></i>
                  <span class="sr-only">Tagesansicht</span>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Legende und Schnellnavigation -->
        <div class="flex flex-col sm:flex-row gap-4 mb-6">
          <!-- Legende -->
          <div class="flex-1 bg-white dark:bg-gray-800 shadow rounded-lg p-4">
            <h3 class="text-xs font-medium uppercase text-gray-500 dark:text-gray-400 mb-3">Legende</h3>
            <div class="grid grid-cols-2 gap-3">
              <div class="flex items-center">
                <span class="inline-block w-3 h-3 bg-red-100 dark:bg-red-900/30 border border-red-300 dark:border-red-700 border-dashed rounded-sm mr-2"></span>
                <span class="text-xs text-gray-700 dark:text-gray-300">Vertretung</span>
              </div>
              <div class="flex items-center">
                <span class="inline-block w-3 h-3 bg-amber-100 dark:bg-amber-900/30 border-2 border-amber-300 dark:border-amber-700 rounded-sm mr-2"></span>
                <span class="text-xs text-gray-700 dark:text-gray-300">Doppelstunde</span>
              </div>
              <div class="flex items-center">
