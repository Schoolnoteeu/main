  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Feather Icons initialisieren
      feather.replace();
      
      // Systemeinstellung für Dark Mode übernehmen
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
      
      // Auf Änderungen der Systemeinstellung reagieren
      window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', event => {
        if (event.matches) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      });

      // Wochenauswahl-Dropdown Funktionalität
      const weekSelect = document.getElementById('week-select');
      if (weekSelect) {
        weekSelect.addEventListener('change', function() {
          const selectedWeek = this.value;
          
          // Datum-Anzeigen aktualisieren basierend auf der gewählten Woche
          let headers = document.querySelectorAll('thead th:not(:first-child)');
          let dates = [];
          
          if (selectedWeek === 'current') {
            dates = ['08.04', '09.04', '10.04', '11.04', '12.04'];
          } else if (selectedWeek === 'next') {
            dates = ['15.04', '16.04', '17.04', '18.04', '19.04'];
          } else if (selectedWeek === 'after') {
            dates = ['22.04', '23.04', '24.04', '25.04', '26.04'];
          }
          
          headers.forEach((header, index) => {
            if (dates[index]) {
              const weekday = header.innerHTML.split('<br>')[0];
              header.innerHTML = weekday + '<br><span class="font-normal">' + dates[index] + '</span>';
            }
          });
          
          // Zeige eine Benachrichtigung an
          showNotification('Stundenplan für die Woche vom ' + dates[0] + ' bis ' + dates[4] + ' geladen.');
        });
      }
      
      // Drucken-Button Funktionalität
      const printButton = document.querySelector('button[type="button"] i[data-feather="printer"]').parentElement;
      if (printButton) {
        printButton.addEventListener('click', function() {
          window.print();
        });
      }
      
      // Filter-Buttons
      const allSubjectsBtn = document.querySelector('button.bg-amber-100');
      const mainSubjectsBtn = document.querySelector('button.bg-gray-100');
      
      if (allSubjectsBtn && mainSubjectsBtn) {
        allSubjectsBtn.addEventListener('click', function() {
          // Alle Fächer aktivieren
          document.querySelectorAll('td > div').forEach(subject => {
            subject.closest('td').style.display = '';
          });
          
          // Button-Stile umschalten
          allSubjectsBtn.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
          allSubjectsBtn.classList.add('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-800', 'dark:text-amber-400');
          
          mainSubjectsBtn.classList.remove('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-800', 'dark:text-amber-400');
          mainSubjectsBtn.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
          
          showNotification('Zeige alle Fächer an.');
        });
        
        mainSubjectsBtn.addEventListener('click', function() {
          // Nur Hauptfächer anzeigen (Deutsch, Mathe, Englisch, etc.)
          const mainSubjects = ['Deutsch', 'Mathematik', 'Englisch', 'Biologie', 'Physik', 'Chemie'];
          
          document.querySelectorAll('td > div').forEach(subject => {
            const subjectName = subject.querySelector('h3')?.textContent;
            const isMainSubject = mainSubjects.some(main => subjectName?.includes(main));
            
            if (isMainSubject) {
              subject.closest('td').style.display = '';
            } else {
              subject.closest('td').style.display = 'none';
            }
          });
          
          // Button-Stile umschalten
          mainSubjectsBtn.classList.remove('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
          mainSubjectsBtn.classList.add('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-800', 'dark:text-amber-400');
          
          allSubjectsBtn.classList.remove('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-800', 'dark:text-amber-400');
          allSubjectsBtn.classList.add('bg-gray-100', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
          
          showNotification('Zeige nur Hauptfächer an.');
        });
      }
      
      // Filter-Button und Dropdown
      const filterBtn = document.getElementById('more-filters-btn');
      if (filterBtn) {
        // Dropdown-Menü für Filter erstellen
        const filterMenu = document.createElement('div');
        filterMenu.className = 'absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 z-10 hidden';
        filterMenu.innerHTML = `
          <div class="py-1" role="menu" aria-orientation="vertical">
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" role="menuitem">Nur Naturwissenschaften</a>
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" role="menuitem">Nur Sprachen</a>
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" role="menuitem">Ohne Vertretungen</a>
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" role="menuitem">Nach Lehrer filtern</a>
          </div>
        `;
        
        filterBtn.parentNode.appendChild(filterMenu);
        
        // Dropdown ein-/ausblenden
        filterBtn.addEventListener('click', function(e) {
          e.stopPropagation();
          filterMenu.classList.toggle('hidden');
        });
        
        // Klick außerhalb des Dropdowns schließt es
        document.addEventListener('click', function() {
          filterMenu.classList.add('hidden');
        });
        
        // Dropdown-Elemente
        filterMenu.querySelectorAll('a').forEach(item => {
          item.addEventListener('click', function(e) {
            e.preventDefault();
            filterMenu.classList.add('hidden');
            showNotification('Filter "' + this.textContent + '" angewendet.');
            
            // Filter-Logik hier implementieren 
            // Je nach ausgewähltem Filter
            const filterName = this.textContent;

            if (filterName === 'Nur Naturwissenschaften') {
              const sciences = ['Biologie', 'Physik', 'Chemie'];
              filterSubjects(sciences);
            } else if (filterName === 'Nur Sprachen') {
              const languages = ['Deutsch', 'Englisch'];
              filterSubjects(languages);
            } else if (filterName === 'Ohne Vertretungen') {
              document.querySelectorAll('td div.border-dashed').forEach(el => {
                if (el.closest('td')) {
                  el.closest('td').style.display = 'none';
                }
              });
            }
          });
        });

        // Hilfsfunktion zum Filtern von Fächern
        function filterSubjects(subjects) {
          document.querySelectorAll('td > div').forEach(subject => {
            const subjectName = subject.querySelector('h3')?.textContent;
            const matches = subjects.some(sub => subjectName?.includes(sub));
            
            if (matches) {
              subject.closest('td').style.display = '';
            } else {
              subject.closest('td').style.display = 'none';
            }
          });
        }
      }
      
      // Checkboxen-Funktionalität
      const showSubstitutionsCheck = document.querySelectorAll('input[type="checkbox"]')[0];
      const combineDoubleHoursCheck = document.querySelectorAll('input[type="checkbox"]')[1];
      
      if (showSubstitutionsCheck) {
        showSubstitutionsCheck.addEventListener('change', function() {
          // Vertretungsstunden ein-/ausblenden
          document.querySelectorAll('td div.border-dashed').forEach(el => {
            if (el.closest('td')) {
              el.closest('td').style.display = this.checked ? '' : 'none';
            }
          });
          
          showNotification(this.checked ? 'Vertretungen werden angezeigt.' : 'Vertretungen werden ausgeblendet.');
        });
      }
      
      if (combineDoubleHoursCheck) {
        combineDoubleHoursCheck.addEventListener('change', function() {
          // Doppelstunden zusammenfassen oder trennen
          document.querySelectorAll('tr').forEach(tr => {
            const rowspanCells = tr.querySelectorAll('td[rowspan="2"]');
            if (rowspanCells.length > 0 && !this.checked) {
              // Doppelstunden trennen - komplexe Änderung, die im Produktivsystem implementiert würde
              showNotification('Doppelstunden werden getrennt angezeigt.');
            } else if (rowspanCells.length === 0 && this.checked) {
              // Doppelstunden zusammenfassen - komplexe Änderung, die im Produktivsystem implementiert würde
              showNotification('Doppelstunden werden zusammengefasst angezeigt.');
            }
          });
        });
      }
      
      // Mobile Tagesnavigation
      const prevDayBtn = document.querySelector('button i[data-feather="chevron-left"]').parentElement;
      const nextDayBtn = document.querySelector('button i[data-feather="chevron-right"]').parentElement;
      const currentDayHeader = document.querySelector('.px-4.py-3.border-b h2');
      
      if (prevDayBtn && nextDayBtn && currentDayHeader) {
        const days = ['Montag, 08.04', 'Dienstag, 09.04', 'Mittwoch, 10.04', 'Donnerstag, 11.04', 'Freitag, 12.04'];
        let currentDayIndex = 0;
        
        prevDayBtn.addEventListener('click', function() {
          currentDayIndex = (currentDayIndex - 1 + days.length) % days.length;
          currentDayHeader.textContent = days[currentDayIndex];
          showNotification('Tag gewechselt zu ' + days[currentDayIndex]);
        });
        
        nextDayBtn.addEventListener('click', function() {
          currentDayIndex = (currentDayIndex + 1) % days.length;
          currentDayHeader.textContent = days[currentDayIndex];
          showNotification('Tag gewechselt zu ' + days[currentDayIndex]);
        });
      }
      
      // Mobile "Vollständigen Tagesplan anzeigen" Link
      const showFullDayLink = document.querySelector('a.text-amber-600');
      if (showFullDayLink) {
        showFullDayLink.addEventListener('click', function(e) {
          e.preventDefault();
          showNotification('Vollständiger Tagesplan wird angezeigt.');
        });
      }
      
      // Benachrichtigungssystem
      function showNotification(message) {
        // Überprüfen, ob bereits eine Benachrichtigung existiert
        let notification = document.getElementById('notification');
        
        if (!notification) {
          // Neue Benachrichtigung erstellen
          notification = document.createElement('div');
          notification.id = 'notification';
          notification.className = 'fixed bottom-4 right-4 bg-amber-600 text-white px-4 py-2 rounded-lg shadow-lg opacity-0 transform translate-y-2 transition-all duration-300 z-50';
          document.body.appendChild(notification);
        }
        
        // Nachricht setzen und anzeigen
        notification.textContent = message;
        notification.classList.remove('opacity-0', 'translate-y-2');
        notification.classList.add('opacity-100', 'translate-y-0');
        
        // Nach 3 Sekunden ausblenden
        setTimeout(() => {
          notification.classList.remove('opacity-100', 'translate-y-0');
          notification.classList.add('opacity-0', 'translate-y-2');
        }, 3000);
      }
    });
  </script>
