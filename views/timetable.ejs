<!-- views/stundenplan.ejs -->

<%- include('./partials/header') %>
<body class="bg-gray-50 dark:bg-gray-900 transition-colors duration-300">
  <div class="min-h-screen flex flex-col">
    <main class="flex-1">
      <div class="max-w-5xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <!-- Header mit Titel und Steuerungselementen -->
        <div class="mb-8">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <div class="flex items-center">
              <div class="bg-gradient-to-r from-amber-500 to-amber-600 p-3 rounded-lg shadow-md mr-4">
                <i data-feather="calendar" class="h-6 w-6 text-white"></i>
              </div>
              <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Stundenplan</h1>
            </div>
            
            <div class="flex gap-3">
              <div class="relative flex-1 sm:flex-initial">
                <select id="week-select" class="w-full sm:w-auto appearance-none bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg py-2 pl-3 pr-10 text-sm text-gray-900 dark:text-white focus:ring-2 focus:ring-amber-500 focus:border-amber-500 shadow-sm transition-colors duration-200" aria-label="Woche auswählen">
