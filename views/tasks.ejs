                <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Hausaufgabe</span>
              </label>
              <label class="inline-flex items-center">
                <input type="radio" name="taskType" value="exam" class="focus:ring-amber-500 h-4 w-4 text-amber-600 border-gray-300 dark:border-gray-700">
                <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Klausur</span>
              </label>
              <label class="inline-flex items-center">
                <input type="radio" name="taskType" value="project" class="focus:ring-amber-500 h-4 w-4 text-amber-600 border-gray-300 dark:border-gray-700">
                <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Projekt</span>
              </label>
