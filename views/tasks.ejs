  <!-- Aufgabenformular-Modal (standardmäßig ausgeblendet) -->
  <div id="taskFormModal" class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50 hidden">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-lg w-full overflow-y-auto">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center justify-between pb-4 border-b border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white" id="modal-title">Neue Aufgabe hinzufügen</h3>
          <button type="button" class="text-gray-400 hover:text-gray-500 dark:hover:text-gray-300 focus:outline-none" id="closeTaskModal" aria-label="Modal schließen">
