  <!-- Mobile Button -->
  <div class="fixed right-4 bottom-4 md:hidden">
    <button type="button" id="mobileAddBtn" class="h-12 w-12 rounded-full shadow-lg flex items-center justify-center text-white bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-500" aria-label="Neue Aufgabe hinzufügen">
      <i data-feather="plus" class="h-6 w-6"></i>
    </button>
  </div>
  
  <!-- JavaScript-Code -->
  <script>
    // Initialisieren der Feather-Icons
    document.addEventListener('DOMContentLoaded', () => {
      // Feather-Icons initialisieren
      if (typeof feather !== 'undefined') {
        feather.replace();
      }
      
      // Ein-/Ausklappen der Sektionen
      document.querySelectorAll('.toggle-icon').forEach(icon => {
        icon.closest('button').addEventListener('click', (e) => {
          const section = e.currentTarget.closest('div');
          const taskList = section.nextElementSibling;
          const icon = e.currentTarget.querySelector('.toggle-icon');
          
          if (taskList.classList.contains('hidden')) {
            taskList.classList.remove('hidden');
            icon.setAttribute('data-feather', 'chevron-up');
          } else {
            taskList.classList.add('hidden');
            icon.setAttribute('data-feather', 'chevron-down');
          }
          
          // Feather-Icons aktualisieren
          if (typeof feather !== 'undefined') {
            feather.replace();
          }
        });
      });
      
      // Ein-/Ausklappen der Aufgabendetails
      document.querySelectorAll('.task-expand-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const taskItem = e.currentTarget.closest('li');
          const detailsSection = taskItem.querySelector('.task-details');
          const icon = e.currentTarget.querySelector('svg');
          
          if (detailsSection.classList.contains('hidden')) {
            detailsSection.classList.remove('hidden');
            icon.setAttribute('data-feather', 'chevron-up');
            e.currentTarget.setAttribute('aria-expanded', 'true');
          } else {
            detailsSection.classList.add('hidden');
            icon.setAttribute('data-feather', 'chevron-down');
            e.currentTarget.setAttribute('aria-expanded', 'false');
          }
          
          // Feather-Icons aktualisieren
          if (typeof feather !== 'undefined') {
            feather.replace();
          }
        });
      });
      
      // Modales Fenster für neue Aufgaben
      const addTaskBtn = document.getElementById('addTaskBtn');
      const mobileAddBtn = document.getElementById('mobileAddBtn');
      const taskFormModal = document.getElementById('taskFormModal');
      const closeTaskModal = document.getElementById('closeTaskModal');
      const cancelTaskBtn = document.getElementById('cancelTaskBtn');
      
      function openModal() {
        taskFormModal.classList.remove('hidden');
        document.getElementById('taskTitle').focus();
      }
      
      function closeModal() {
        taskFormModal.classList.add('hidden');
      }
      
      if (addTaskBtn && taskFormModal) {
        addTaskBtn.addEventListener('click', openModal);
      }
      
      if (mobileAddBtn && taskFormModal) {
        mobileAddBtn.addEventListener('click', openModal);
      }
      
      if (closeTaskModal && cancelTaskBtn && taskFormModal) {
        closeTaskModal.addEventListener('click', closeModal);
        cancelTaskBtn.addEventListener('click', closeModal);
        
        // Schließen bei Klick außerhalb
        taskFormModal.addEventListener('click', (e) => {
          if (e.target === taskFormModal) {
            closeModal();
          }
        });
        
        // Schließen mit ESC-Taste
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && !taskFormModal.classList.contains('hidden')) {
            closeModal();
          }
        });
      }
      
      // Aufgaben-Speicherung mit automatischer Löschung
      const taskForm = document.getElementById('taskForm');
      if (taskForm) {
        taskForm.addEventListener('submit', (e) => {
          e.preventDefault();
          // Hier würde man die Aufgabe speichern
          
          // Formular zurücksetzen und schließen
          taskForm.reset();
          closeModal();
          
          // Feedback anzeigen
          showToast('Aufgabe erfolgreich gespeichert!', 'success');
        });
      }
      
      // Checkbox-Verhalten mit Verwaltung des Löschdatums
      document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
        checkbox.addEventListener('change', (e) => {
          const taskItem = e.target.closest('li');
          const taskTitle = taskItem.querySelector('h3');
          const taskDesc = taskItem.querySelector('p');
          
          if (e.target.checked) {
            // Als erledigt markieren
            taskTitle.classList.add('line-through', 'text-gray-500', 'dark:text-gray-400');
            if (taskDesc) taskDesc.classList.add('line-through', 'text-gray-500', 'dark:text-gray-400');
            taskItem.classList.add('opacity-70');
            
            // Löschdatum berechnen (15 Tage ab heute)
            const today = new Date();
            const deleteDate = new Date(today);
            deleteDate.setDate(today.getDate() + 15);
            const formattedDeleteDate = deleteDate.toLocaleDateString('de-DE');
            
            // Info zum Löschdatum hinzufügen (dies würde in einer echten Anwendung anders implementiert)
            const deleteInfo = document.createElement('div');
            deleteInfo.className = 'mt-2 text-xs text-gray-400 dark:text-gray-500';
            deleteInfo.innerHTML = `Wird gelöscht am: ${formattedDeleteDate}`;
            
            // Hinzufügen des Löschdatum-Infos (in einer echten Anwendung würde dies anders implementiert)
            const taskContent = taskItem.querySelector('.min-w-0');
            if (taskContent && !taskContent.querySelector('[data-delete-info]')) {
              taskContent.appendChild(deleteInfo);
            }
            
            // Feedback
            showToast(`Aufgabe als erledigt markiert! Wird am ${formattedDeleteDate} gelöscht.`, 'success');
          } else {
            // Als unerledigt markieren
            taskTitle.classList.remove('line-through', 'text-gray-500', 'dark:text-gray-400');
            if (taskDesc) taskDesc.classList.remove('line-through', 'text-gray-500', 'dark:text-gray-400');
            taskItem.classList.remove('opacity-70');
            
            // Löschdatum-Info entfernen (in einer echten Anwendung würde dies anders implementiert)
            const deleteInfo = taskItem.querySelector('[data-delete-info]');
            if (deleteInfo) {
              deleteInfo.remove();
            }
          }
        });
      });
      
      // Suche
      const searchInput = document.getElementById('search-tasks');
      if (searchInput) {
        searchInput.addEventListener('input', (e) => {
          const searchTerm = e.target.value.toLowerCase().trim();
          
          document.querySelectorAll('#overdue-tasks li, #today-tasks li, #upcoming-tasks li, #completed-tasks li').forEach(task => {
            const taskText = task.textContent.toLowerCase();
            if (taskText.includes(searchTerm)) {
              task.style.display = '';
            } else {
              task.style.display = 'none';
            }
          });
        });
      }
      
      // Filter nach Fach
      const subjectSelect = document.getElementById('subject-select');
      if (subjectSelect) {
        subjectSelect.addEventListener('change', (e) => {
          const selectedSubject = e.target.value.toLowerCase();
          
          if (selectedSubject === 'all') {
            // Alle anzeigen
            document.querySelectorAll('#overdue-tasks li, #today-tasks li, #upcoming-tasks li, #completed-tasks li').forEach(task => {
              task.style.display = '';
            });
          } else {
            // Nach Fach filtern
            document.querySelectorAll('#overdue-tasks li, #today-tasks li, #upcoming-tasks li, #completed-tasks li').forEach(task => {
              const subjectTag = task.querySelector('[class*="rounded-full"]');
              if (subjectTag && subjectTag.textContent.toLowerCase().includes(selectedSubject)) {
                task.style.display = '';
              } else {
                task.style.display = 'none';
              }
            });
          }
        });
      }
      
      // Filter nach Status
      const filterSelect = document.getElementById('filter-select');
      if (filterSelect) {
        filterSelect.addEventListener('change', (e) => {
          const selectedFilter = e.target.value;
          
          const sections = {
            'overdue': document.getElementById('overdue-tasks').closest('div'),
            'due-soon': document.getElementById('today-tasks').closest('div'),
            'upcoming': document.getElementById('upcoming-tasks').closest('div'),
            'completed': document.getElementById('completed-tasks').closest('div')
          };
          
          if (selectedFilter === a'all') {
            // Alle Sektionen anzeigen
            Object.values(sections).forEach(section => {
              section.style.display = '';
            });
          } else {
            // Nur ausgewählte Sektion anzeigen
            Object.entries(sections).forEach(([key, section]) => {
              if (key === selectedFilter) {
                section.style.display = '';
                // Aufklappen wenn gefiltert
                const taskList = section.querySelector('ul');
                const icon = section.querySelector('.toggle-icon');
                taskList.classList.remove('hidden');
                icon.setAttribute('data-feather', 'chevron-up');
                if (typeof feather !== 'undefined') {
                  feather.replace();
                }
              } else {
                section.style.display = 'none';
              }
            });
          }
        });
      }
      
      // Toast-Benachrichtigungen
      function showToast(message, type = 'info') {
        const toast = document.createElement('div');
        toast.className = `fixed bottom-4 right-4 px-4 py-2 rounded-lg shadow-lg text-white text-sm z-50 transition-opacity duration-300 opacity-0`;
        
        switch (type) {
          case 'success':
            toast.classList.add('bg-green-500');
            break;
          case 'error':
            toast.classList.add('bg-red-500');
            break;
          default:
            toast.classList.add('bg-blue-500');
        }
        
        toast.textContent = message;
        document.body.appendChild(toast);
        
        // Animation
        setTimeout(() => {
          toast.classList.add('opacity-100');
        }, 10);
        
        // Ausblenden nach 3 Sekunden
        setTimeout(() => {
          toast.classList.remove('opacity-100');
          toast.classList.add('opacity-0');
          
          setTimeout(() => {
            document.body.removeChild(toast);
          }, 300);
        }, 3000);
      }
      
      // Dark Mode
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'dark' || (!savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
      
      // Simulation der automatischen Löschung (in einer echten Anwendung würde dies serverseitig erfolgen)
      function setupAutoDeletion() {
        // Diese Funktion würde in einer echten Anwendung serverseitig implementiert werden
        console.log('Automatische Löschung für erledigte Aufgaben eingerichtet (15 Tage nach Erledigung)');
      }
      
      setupAutoDeletion();
    });
  </script>
