            <label for="taskTitle" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Titel</label>
            <input type="text" id="taskTitle" name="title" class="mt-1 block w-full border border-gray-300 dark:border-gray-700 rounded-md shadow-sm py-2 px-3 focus:ring-2 focus:ring-amber-500 focus:border-amber-500 bg-white dark:bg-gray-800 text-gray-900 dark:text-white" required>
