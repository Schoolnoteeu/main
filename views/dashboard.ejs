<!-- views/dashboard.ejs -->

<%- include('./partials/header') %>
<body class="bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
  <div class="min-h-screen flex flex-col">
    <main class="flex-1">
      <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <!-- Willkommensabschnitt -->
        <div class="px-4 py-6 sm:px-0">
          <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-sm rounded-lg transition-colors duration-200">
            <div class="px-4 py-5 sm:p-6">
              <div class="flex items-center">
                <div class="flex-shrink-0 bg-amber-500 rounded-lg p-3">
                  <i data-feather="user" class="h-6 w-6 text-white"></i>
                </div>
                <div class="ml-5">
                  <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
                    Willkommen bei Schoolnote.eu!
                  </h3>
                  <div class="mt-2 max-w-xl text-sm text-gray-500 dark:text-gray-400">
                    <p>
                      Du bist eingeloggt als <span class="font-medium text-gray-900 dark:text-white"><%= email %></span>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Statistik-Karten -->
        <div class="mt-6 px-4 sm:px-0">
          <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Übersicht</h2>
          
          <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
            <!-- Notendurchschnitt -->
            <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-md rounded-lg transition-colors duration-200 transform hover:translate-y-[-2px] hover:shadow-lg">
              <div class="px-4 py-5 sm:p-6">
                <div class="flex items-center justify-between">
                  <div class="flex-shrink-0 rounded-lg p-3 bg-amber-50 dark:bg-amber-900/20">
                    <i data-feather="bar-chart-2" class="h-5 w-5 text-amber-500 dark:text-amber-400"></i>
                  </div>
                  <span class="text-2xl font-bold text-gray-900 dark:text-white">2,1</span>
                </div>
                <div class="mt-4">
                  <p class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">
                    Notendurchschnitt
                  </p>
                  <div class="mt-1 text-xs text-green-600 dark:text-green-400 flex items-center">
                    <i data-feather="arrow-up" class="h-3 w-3 mr-1"></i>
                    <span>0,3 seit letztem Semester</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Offene Aufgaben -->
            <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-md rounded-lg transition-colors duration-200 transform hover:translate-y-[-2px] hover:shadow-lg">
              <div class="px-4 py-5 sm:p-6">
                <div class="flex items-center justify-between">
                  <div class="flex-shrink-0 rounded-lg p-3 bg-amber-50 dark:bg-amber-900/20">
                    <i data-feather="check-square" class="h-5 w-5 text-amber-500 dark:text-amber-400"></i>
                  </div>
                  <span class="text-2xl font-bold text-gray-900 dark:text-white">3</span>
                </div>
                <div class="mt-4">
                  <p class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">
                    Offene Aufgaben
                  </p>
                  <div class="mt-1 text-xs text-red-600 dark:text-red-400 flex items-center">
                    <i data-feather="alert-circle" class="h-3 w-3 mr-1"></i>
                    <span>1 fällig in 2 Tagen</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Stundenplan -->
            <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-md rounded-lg transition-colors duration-200 transform hover:translate-y-[-2px] hover:shadow-lg">
              <div class="px-4 py-5 sm:p-6">
                <div class="flex items-center justify-between">
                  <div class="flex-shrink-0 rounded-lg p-3 bg-amber-50 dark:bg-amber-900/20">
                    <i data-feather="clock" class="h-5 w-5 text-amber-500 dark:text-amber-400"></i>
                  </div>
                  <span class="text-lg font-medium text-gray-900 dark:text-white">Mathematik</span>
                </div>
                <div class="mt-4">
                  <p class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">
                    Nächste Stunde
                  </p>
                  <div class="mt-1 text-xs text-gray-600 dark:text-gray-400 flex items-center">
                    <i data-feather="map-pin" class="h-3 w-3 mr-1"></i>
                    <span>Raum 204 um 10:15 Uhr</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Neueste Aktivitäten -->
        <div class="mt-8 px-4 sm:px-0">
          <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4 flex items-center">
            <i data-feather="activity" class="h-5 w-5 mr-2 text-amber-500 dark:text-amber-400"></i>
            Neueste Aktivitäten
          </h2>
          
          <div class="bg-white dark:bg-gray-800 shadow-md overflow-hidden rounded-lg transition-colors duration-200">
            <ul class="divide-y divide-gray-200 dark:divide-gray-700">
              <li>
                <div class="px-4 py-4 sm:px-6 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-150">
                  <div class="flex items-center justify-between">
                    <p class="text-sm font-medium text-amber-600 dark:text-amber-400 truncate">
                      Neue Note: Deutsch
                    </p>
                    <div class="ml-2 flex-shrink-0 flex">
                      <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-400">
                        2,0
                      </p>
                    </div>
                  </div>
                  <div class="mt-2 sm:flex sm:justify-between">
                    <div class="sm:flex">
                      <p class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                        <i data-feather="file-text" class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400 dark:text-gray-500"></i>
                        Aufsatz: "Die Verwandlung"
                      </p>
                    </div>
                    <div class="mt-2 flex items-center text-sm text-gray-500 dark:text-gray-400 sm:mt-0">
                      <i data-feather="calendar" class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400 dark:text-gray-500"></i>
                      <p>
                        Vor 2 Tagen
                      </p>
                    </div>
                  </div>
                </div>
              </li>
              
              <li>
                <div class="px-4 py-4 sm:px-6 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-150">
                  <div class="flex items-center justify-between">
                    <p class="text-sm font-medium text-amber-600 dark:text-amber-400 truncate">
                      Neue Hausaufgabe: Physik
                    </p>
                    <div class="ml-2 flex-shrink-0 flex">
                      <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-400">
                        Fällig in 5 Tagen
                      </p>
                    </div>
                  </div>
                  <div class="mt-2 sm:flex sm:justify-between">
                    <div class="sm:flex">
                      <p class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                        <i data-feather="book" class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400 dark:text-gray-500"></i>
                        Übungsaufgaben S. 45-47
                      </p>
                    </div>
                    <div class="mt-2 flex items-center text-sm text-gray-500 dark:text-gray-400 sm:mt-0">
                      <i data-feather="calendar" class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400 dark:text-gray-500"></i>
                      <p>
                        Gestern
                      </p>
                    </div>
                  </div>
                </div>
              </li>
              
              <li>
                <div class="px-4 py-4 sm:px-6 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-150">
                  <div class="flex items-center justify-between">
                    <p class="text-sm font-medium text-amber-600 dark:text-amber-400 truncate">
                      Klausurtermin angekündigt: Mathematik
                    </p>
                    <div class="ml-2 flex-shrink-0 flex">
                      <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-400">
                        In 2 Wochen
                      </p>
                    </div>
                  </div>
                  <div class="mt-2 sm:flex sm:justify-between">
                    <div class="sm:flex">
                      <p class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                        <i data-feather="edit-3" class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400 dark:text-gray-500"></i>
                        Analysis & Differentialrechnung
                      </p>
                    </div>
                    <div class="mt-2 flex items-center text-sm text-gray-500 dark:text-gray-400 sm:mt-0">
                      <i data-feather="calendar" class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400 dark:text-gray-500"></i>
                      <p>
                        Vor 3 Tagen
                      </p>
                    </div>
                  </div>
                </div>
              </li>
            </ul>
            
            <div class="bg-gray-50 dark:bg-gray-700/50 px-4 py-3 text-center text-sm">
              <a href="#" class="text-amber-600 dark:text-amber-400 font-medium hover:text-amber-700 dark:hover:text-amber-300 inline-flex items-center transition-colors duration-150">
                Alle Aktivitäten ansehen
                <i data-feather="arrow-right" class="ml-1 h-4 w-4"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer class="bg-white dark:bg-gray-800 shadow-inner mt-auto">
      <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <div class="flex items-center text-gray-500 dark:text-gray-400 text-sm">
            <img class="h-6 w-auto mr-2" src="/images/logo.png" alt="Schoolnote.eu Logo">
            <p>&copy; 2023 Schoolnote.eu - Alle Rechte vorbehalten</p>
          </div>
          <div class="flex justify-center space-x-6 text-sm text-gray-500 dark:text-gray-400">
            <a href="/datenschutz" class="hover:text-amber-600 dark:hover:text-amber-400 transition-colors duration-200">Datenschutz</a>
            <a href="/impressum" class="hover:text-amber-600 dark:hover:text-amber-400 transition-colors duration-200">Impressum</a>
            <a href="/nutzungsbedingungen" class="hover:text-amber-600 dark:hover:text-amber-400 transition-colors duration-200">Nutzungsbedingungen</a>
          </div>
        </div>
      </div>
    </footer>
  </div>

  <style>
    /* Dark Mode Styles */
    .dark {
      color-scheme: dark;
    }
  </style>
</body>
</html>