<!-- views/partials/header.ejs -->
<!DOCTYPE html>
<html lang="de" class="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Schoolnote.eu - <%= title %></title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <script src="/js/feather.min.js"></script>
  <style>
    /* Füge hier für Testzwecke CSS hinzu */
    .dropdown-visible {
      display: block !important;
    }
  </style>
</head>
<body class="bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
  <div class="min-h-screen flex flex-col">
    <!-- Navigation -->
    <nav class="bg-white dark:bg-gray-800 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <div class="p-1 bg-white/80 dark:bg-gray-700/30 backdrop-blur-sm rounded-lg">
                <img class="h-8 w-auto" src="/images/logo.png" alt="Schoolnote.eu Logo">
              </div>
            </div>
            <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
              <a href="/dashboard" 
                class="<%= activePage === 'dashboard' ? 'border-amber-500 text-gray-900 dark:text-white' : 'border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                <i data-feather="home" class="h-4 w-4 mr-1"></i>
                Dashboard
              </a>
              <a href="/timetable" 
                class="<%= activePage === 'timetable' ? 'border-amber-500 text-gray-900 dark:text-white' : 'border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                <i data-feather="calendar" class="h-4 w-4 mr-1"></i>
                Stundenplan
              </a>
              <a href="/tasks" 
                class="<%= activePage === 'tasks' ? 'border-amber-500 text-gray-900 dark:text-white' : 'border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                <i data-feather="check-square" class="h-4 w-4 mr-1"></i>
                Aufgaben
              </a>
              <a href="/messages" 
                class="<%= activePage === 'messages' ? 'border-amber-500 text-gray-900 dark:text-white' : 'border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                <i data-feather="message-circle" class="h-4 w-4 mr-1"></i>
                Nachrichten
              </a>
              <a href="/grades" 
                class="<%= activePage === 'grades' ? 'border-amber-500 text-gray-900 dark:text-white' : 'border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                <i data-feather="book" class="h-4 w-4 mr-1"></i>
                Noten
              </a>
              <a href="/settings" 
                class="<%= activePage === 'settings' ? 'border-amber-500 text-gray-900 dark:text-white' : 'border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                <i data-feather="settings" class="h-4 w-4 mr-1"></i>
                Einstellungen
              </a>
            </div>
          </div>
          <div class="hidden sm:ml-6 sm:flex sm:items-center">
            <!-- User Profile Dropdown -->
            <div class="ml-3 relative">
              <!-- User Profile Button -->
              <button type="button" class="bg-white dark:bg-gray-700 flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 dark:focus:ring-offset-gray-800" id="dropdown-toggle">
                <span class="sr-only">Benutzermenü öffnen</span>
                <div class="h-8 w-8 rounded-full bg-amber-100 dark:bg-amber-900/50 flex items-center justify-center text-amber-600 dark:text-amber-400">
                  <%= email.charAt(0).toUpperCase() %>
                </div>
              </button>
              
              <!-- Dropdown Menu -->
              <div class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-lg shadow-lg py-1 bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 focus:outline-none z-10" id="dropdown-menu">
                <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">Dein Profil</a>
                <a href="/settings" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">Einstellungen</a>
                <% if (role === 'admin') { %>
                  <a href="/admin" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">Admin</a>
                <% } %>
                <a href="/logout" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">Abmelden</a>
              </div>
            </div>
            
            <a href="/logout" class="ml-3 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-lg text-white bg-amber-500 hover:bg-amber-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 dark:focus:ring-offset-gray-800 transition-all duration-200">
              <i data-feather="log-out" class="h-4 w-4 mr-1"></i>
              Abmelden
            </a>
          </div>
          <div class="-mr-2 flex items-center sm:hidden">
            <!-- Mobile menu button -->
            <button type="button" class="bg-white dark:bg-gray-700 inline-flex items-center justify-center p-2 rounded-lg text-gray-400 hover:text-gray-500 dark:hover:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-amber-500" id="mobile-menu-button">
              <span class="sr-only">Menü öffnen</span>
              <i data-feather="menu" class="h-6 w-6" id="menu-icon"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile menu, show/hide based on menu state. -->
      <div class="hidden sm:hidden" id="mobile-menu">
        <div class="pt-2 pb-3 space-y-1">
          <a href="/dashboard" 
             class="<%= activePage === 'dashboard' ? 'bg-amber-50 dark:bg-amber-900/20 border-amber-500 text-amber-700 dark:text-amber-400' : 'border-transparent text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-300 hover:text-gray-800 dark:hover:text-gray-300' %> block pl-3 pr-4 py-2 border-l-4 text-base font-medium">
            <i data-feather="home" class="h-4 w-4 inline mr-1"></i>
            Dashboard
          </a>
          <a href="/timetable" 
             class="<%= activePage === 'timetable' ? 'bg-amber-50 dark:bg-amber-900/20 border-amber-500 text-amber-700 dark:text-amber-400' : 'border-transparent text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-300 hover:text-gray-800 dark:hover:text-gray-300' %> block pl-3 pr-4 py-2 border-l-4 text-base font-medium">
            <i data-feather="calendar" class="h-4 w-4 inline mr-1"></i>
            Stundenplan
          </a>
          <a href="/tasks" 
             class="<%= activePage === 'tasks' ? 'bg-amber-50 dark:bg-amber-900/20 border-amber-500 text-amber-700 dark:text-amber-400' : 'border-transparent text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-300 hover:text-gray-800 dark:hover:text-gray-300' %> block pl-3 pr-4 py-2 border-l-4 text-base font-medium">
            <i data-feather="check-square" class="h-4 w-4 inline mr-1"></i>
            Aufgaben
          </a>
          <a href="/messages" 
             class="<%= activePage === 'messages' ? 'bg-amber-50 dark:bg-amber-900/20 border-amber-500 text-amber-700 dark:text-amber-400' : 'border-transparent text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-300 hover:text-gray-800 dark:hover:text-gray-300' %> block pl-3 pr-4 py-2 border-l-4 text-base font-medium">
            <i data-feather="message-circle" class="h-4 w-4 inline mr-1"></i>
            Nachrichten
          </a>
          <a href="/grades" 
             class="<%= activePage === 'grades' ? 'bg-amber-50 dark:bg-amber-900/20 border-amber-500 text-amber-700 dark:text-amber-400' : 'border-transparent text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-300 hover:text-gray-800 dark:hover:text-gray-300' %> block pl-3 pr-4 py-2 border-l-4 text-base font-medium">
            <i data-feather="book" class="h-4 w-4 inline mr-1"></i>
            Noten
          </a>
          <a href="/settings" 
             class="<%= activePage === 'settings' ? 'bg-amber-50 dark:bg-amber-900/20 border-amber-500 text-amber-700 dark:text-amber-400' : 'border-transparent text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-300 hover:text-gray-800 dark:hover:text-gray-300' %> block pl-3 pr-4 py-2 border-l-4 text-base font-medium">
            <i data-feather="settings" class="h-4 w-4 inline mr-1"></i>
            Einstellungen
          </a>
        </div>
        <div class="pt-4 pb-3 border-t border-gray-200 dark:border-gray-700">
          <div class="flex items-center px-4">
            <div class="flex-shrink-0">
              <div class="h-10 w-10 rounded-full bg-amber-100 dark:bg-amber-900/50 flex items-center justify-center text-amber-600 dark:text-amber-400 text-lg">
                <%= email.charAt(0).toUpperCase() %>
              </div>
            </div>
            <div class="ml-3">
              <div class="text-base font-medium text-gray-800 dark:text-white"><%= email %></div>
              <div class="text-sm font-medium text-gray-500 dark:text-gray-400">Schüler</div>
            </div>
          </div>
          <div class="mt-3 space-y-1">
            <a href="/profile" class="block px-4 py-2 text-base font-medium text-gray-500 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
              Dein Profil
            </a>
            <a href="/settings" class="block px-4 py-2 text-base font-medium text-gray-500 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
              Einstellungen
            </a>
            <% if (role === 'admin') { %>
               <a href="/admin" class="block px-4 py-2 text-base font-medium text-gray-500 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                Admin
              </a>
            <% } %>
            <a href="/logout" class="block px-4 py-2 text-base font-medium text-gray-500 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
              Abmelden
            </a>
          </div>
        </div>
      </div>
    </nav>

<script>
      document.addEventListener('DOMContentLoaded', function() {
        // Feather Icons initialisieren
        feather.replace();
        
        // Systemeinstellung für Dark Mode übernehmen
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
        
        // Auf Änderungen der Systemeinstellung reagieren
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', event => {
          if (event.matches) {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.remove('dark');
          }
        });

        // Benutzermenü Dropdown
        const userMenuButton = document.getElementById('dropdown-toggle');
        const userMenu = document.getElementById('dropdown-menu');

        if (userMenuButton && userMenu) {
          userMenuButton.addEventListener('click', function() {
            userMenu.classList.toggle('hidden');
          });

          // Klick außerhalb des Menüs schließt es
          document.addEventListener('click', function(event) {
            if (!userMenuButton.contains(event.target) && !userMenu.contains(event.target)) {
              userMenu.classList.add('hidden');
            }
          });
        }

        // Mobile Menü
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = document.getElementById('menu-icon');

        if (mobileMenuButton && mobileMenu && menuIcon) {
          mobileMenuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');

            // Icon zwischen menu und x wechseln
            if (mobileMenu.classList.contains('hidden')) {
              menuIcon.innerHTML = '';
              const icon = feather.icons['menu'].toSvg();
              menuIcon.innerHTML = icon;
            } else {
              menuIcon.innerHTML = '';
              const icon = feather.icons['x'].toSvg();
              menuIcon.innerHTML = icon;
            }
          });
        }
      });
    </script>